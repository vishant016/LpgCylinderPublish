@model LPGCylinderSystem.Models.ApplicationUser
@using LPGCylinderSystem.Models

@{ var user1 = @ViewBag.user; }





<link rel="stylesheet" type="text/css" href="css/assets/css/bootstrap.min.css">

<link rel="stylesheet" type="text/css" href="css/assets/css/font-awesome.css">
<link rel="stylesheet" href="css/assets/css/templatemo-softy-pinko.css">

<section class="section colored" id="contact-us">
    <div class="container">
        <!-- ***** Section Title Start ***** -->
        <div class="row">
            <div class="col-lg-12">
                <div class="center-heading">
                    <h2 class="section-title">Book Your Cylinder</h2>
                </div>
            </div>
            <div class="offset-lg-3 col-lg-6">
                <div class="center-text">

                </div>
            </div>
        </div>
        <!-- ***** Section Title End ***** -->

        <div class="row">
            <!-- ***** Contact Text Start ***** -->
            <div class="col-lg-4 col-md-6 col-sm-12">

                <img src="css/assets/images/logo.jpg" style="width: 300px;height: 250px">

            </div>
            <!-- ***** Contact Text End ***** -->
            <!-- ***** Contact Form Start ***** -->
            <div class="col-lg-8 col-md-6 col-sm-12">
                <div class="contact-form">
                    <form asp-controller="Booking" asp-action="ChooseMethod" method="post">
                        <input type="hidden" id="hidden1" name="hidden1" value="" />
                        <div class="row">
                            <div class="col-lg-10 col-md-12 col-sm-12">
                                <b>Refill cylinder request for:</b>
                                <br><br>
                                <fieldset>
                                    <select name="cylindertype" id="cylindertype" class="form-control" required="">
                                        @foreach (Cylinder c in ViewBag.Cylinders)
                                        {
                            <option value=@c.Price>@c.CylinderType</option>}
                                    </select>
                                </fieldset>
                            </div>

                            <div class="col-lg-6 col-md-12 col-sm-12">
                                <br><br>
                                <b>Distrubutor Name</b>
                                <p>Jay Yogeshwar Gas Agency</p>
                            </div>
                            <div class="col-lg-6 col-md-12 col-sm-12">
                                <br><br>
                                <b>Consumer Number</b>
                                <p>@user1.Connection_Id</p>
                            </div>


                            <div class="col-lg-6 col-md-12 col-sm-12">
                                <br><br>
                                <b>Consumer Name</b>
                                <p>@user1.Name</p>
                            </div>
                            <div class="col-lg-6 col-md-12 col-sm-12">
                                <br><br>
                                <b>Shipping Adress</b>
                                <p>@user1.Address</p>
                            </div>

                            <div class="col-lg-6 col-md-12 col-sm-12">
                                <br><br>
                                <b>Registered Number</b>
                                <p>@user1.MobileNo</p>
                            </div>
                            <div class="col-lg-6 col-md-12 col-sm-12">
                                <br><br>
                                <b>Consumer Emailid</b>
                                <p>@user1.Email</p>
                            </div>
                            <div class="col-lg-12">
                                <br><br>
                                <fieldset>
                                    <button type="submit" id="form-submit" class="main-button">Book Now</button>&nbsp;&nbsp;&nbsp;&nbsp; <button type="submit" class="main-button" asp-controller="Home" asp-action="Index">Cancle</button>
                                </fieldset>

                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <!-- ***** Contact Form End ***** -->
        </div>
    </div>
</section>
<!-- container-scroller -->
<!-- plugins:js -->
<script src="~/assets/vendors/js/vendor.bundle.base.js"></script>
<script src="~/assets/js/off-canvas.js"></script>
<script src="~/assets/js/hoverable-collapse.js"></script>
<script src="~/assets/js/misc.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>

<script>

        $(document).ready(function () {
                var ddtext = $('#cylindertype option:selected').text();
                $("#hidden1").val(ddtext);
        });
</script>